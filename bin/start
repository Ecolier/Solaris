#!/usr/bin/env node

require('dotenv').config()
const debug = require('debug')('khari')

const server = require('http').createServer(
    require('../dist/application').default
)

const io = require('socket.io')(server)
io.on('connect', require('../dist/socket').onConnected)

require('../dist/common/database').connect().then(() => {
    server.listen(5000, () => {
        debug(`application listening on port 5000`)
    })
})