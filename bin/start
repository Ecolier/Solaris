#!/usr/bin/env node

require('dotenv').config()
const debug = require('debug')('khari')

const server = require('http').createServer(
    require('../src/application').default
)

const io = require('socket.io')(server)
io.on('connect', require('../src/socket').onConnected)

require('../src/database').connect().then(() => {
    server.listen(8082, () => {
        debug(`application listening on port 5000`)
    })
})